<?xml version="1.0" encoding="UTF-8"?>


<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
    <class name="ToroShop\Bundle\AddressBundle\Model\Address">
        <property name="geo">
            <constraint name="NotBlank">
                <option name="message">toro.address.geo.not_blank</option>
                <option name="groups">toro</option>
            </constraint>
        </property>
        <property name="firstName">
            <constraint name="NotBlank">
                <option name="message">toro.address.first_name.not_blank</option>
                <option name="groups">toro</option>
            </constraint>
        </property>
        <property name="lastName">
            <constraint name="NotBlank">
                <option name="message">toro.address.last_name.not_blank</option>
                <option name="groups">toro</option>
            </constraint>
        </property>
        <property name="street">
            <constraint name="NotBlank">
                <option name="message">toro.address.street.not_blank</option>
                <option name="groups">toro</option>
            </constraint>
        </property>
        <property name="phoneNumber">
            <constraint name="NotBlank">
                <option name="message">toro.address.phone_number.not_blank</option>
                <option name="groups">phone_number</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
